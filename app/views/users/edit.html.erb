<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation" >
          <h3><%= pluralize(@user.errors.count,"error") %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name", id: "user_name" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image %>
          <%= f.attachment_field :profile_image, class: "form-control-file user_image", placeholder: "プロフィール画像" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control introduction", id: "user_introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit '投稿', value: "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
