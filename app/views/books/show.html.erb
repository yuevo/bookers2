<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'shared/sidebar', user: @book_detail.user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_detail.user_id) do %>
                <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", size:'40x40' %>
                <br>
                <%= @book_detail.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_detail.id) do %>
                <%= @book_detail.title %>
              <% end %>
            </td>
            <td>
              <%= @book_detail.body %>
            </td>
            <% if @book_detail.user_id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book_detail), class: "btn btn-sm btn-success edit_book_#{@book_detail.id}" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book_detail), method: :delete, data: { disable_with: '削除中...' }, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
